#tpls-box
	padding 10px 0 0 0;
.tpl-edit-box
	box-shadow:0 0 10px rgba(0,0,0,.2);

.popup.addtxt
	position absolute
	left 0
	top 0 
	bottom 0
	height 100%
	width 100%
	z-index 1110
	background #F8F8F8
	opacity: 0;
	-webkit-transition-property: -webkit-transform;
	transition-property: transform;
	-webkit-transform: translate3d(0,100%,0);
	transform: translate3d(0,100%,0);
	-webkit-transition: -webkit-transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
	transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
	&.active
		opacity: 1;
		-webkit-transform: translate3d(0, 0, 0);
		transform: translate3d(0, 0, 0);
	.popup-inner
		padding-top:35px;
		height 100%
		.popup-hd
			position absolute
			top:0
			width 100%
			height 35px 
			line-height 35px
			border-bottom: 1px solid #dedede;
			background-color: #fff;
			h4
				line-height 35px
				color:#333
				margin: 0 30px
				font-weight:700
				text-align center
				overflow hidden
			.close
				position: absolute;
				right: 0;
				top: 0;
				font-size: 30px;
				width: 35px;
				text-align: center;
				cursor: pointer;
				color:#ccc
		.popup-bd
			padding:10px 15px;
			background: #f8f8f8;
			color: #555;
			border-top:1px solid #fff
			height 100%
			width 100%
			overflow-y:auto;
			overflow-x:hidden;
			-webkit-overflow-scrolling : touch;
			textarea
				display block;
				color:#000
				line-height 1em;
				overflow-x hidden
				overflow-y auto;
				height 100px
			.txt-tool
				line-height 33px;
				.ttf-color
					display: inline-block;
					height: 30px;
					width: 30px;
					margin: 0;
					margin-right: 8px;
					position: relative;
					top: 2px;
					border-radius: 50%;
					background: #000;
					box-shadow: 0 0 4px rgba(0,0,0,.2);
				span
				b
					font-size 14px
					font-weight normal
				.slider-wrapper
					width 100px;
					display inline-block
					margin-right: 8px;
					.range-handle
						width 20px
						height 20px
						top -10px
					.range-bar
						top -3px
				.range-min
					width 0
					height 0
					position static
				
			.ttf-pic-list
				height auto
				position relative
				box-sizing:border-box
				ul
				li
					margin 0 
					padding 0
					list-style none
				>ul>li
					position absolute
					height 100%
				ul.ttf-item
					width 100%
					overflow auto
					li
						float:left;
						width 45%
						margin 2.5%
						padding 0 2.5%
						background #fff
						border:1px solid #ccc
						border-radius 4px;
						img
							display block
							width 100%
							height auto
			.txt-result
				div
					text-align center
					width: 100%;
					overflow:hidden;
				img
					display inline-block
					margin-bottom: 10px
					height auto
			.btn-createTxt
				padding-left:30px
				padding-right:30px
	
						

